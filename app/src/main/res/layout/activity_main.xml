<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="15dp"
            android:textSize="20sp"
            android:text=""
            android:visibility="gone"
            android:textStyle="bold"
            android:gravity="center"/>

        <TextView
            android:id="@+id/txt_phone_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:text=""
            android:textStyle="bold"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <com.nesun.callchat.ui.widget.VServiceListView
            android:layout_marginTop="10dp"
            android:id="@+id/vslv_main"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

        </com.nesun.callchat.ui.widget.VServiceListView>

        <View
            android:id="@+id/divider"
            android:layout_width="1px"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            android:layout_height="match_parent"/>


        <com.nesun.callchat.ui.widget.VServiceListView
            android:layout_marginTop="10dp"
            android:id="@+id/vslv_second"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1">

        </com.nesun.callchat.ui.widget.VServiceListView>

        <View
            android:id="@+id/divider2"
            android:layout_width="1px"
            android:background="@color/white"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:visibility="gone"
            android:layout_height="match_parent"/>


        <com.nesun.callchat.ui.widget.VServiceListView
            android:layout_marginTop="10dp"
            android:id="@+id/vslv_third"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="1">

        </com.nesun.callchat.ui.widget.VServiceListView>


    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp">

        <com.hl.foundation.library.widget.CImageButton
            android:id="@+id/img_accept_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="10dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_accept_phone"/>

        <com.hl.foundation.library.widget.CImageButton
            android:id="@+id/img_reject_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="10dp"
            android:src="@drawable/ic_finish_phone"/>

    </RelativeLayout>

</LinearLayout>
