<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hl.foundation.library.widget.CImageButton
        android:id="@+id/img_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        android:src="@drawable/ic_accept_phone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_dial_num"
        android:layout_above="@id/img_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_above="@id/rv_dial_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/edt_phone"
            android:textSize="36sp"
            android:padding="10dp"
            android:background="@color/transparent"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:enabled="false"
            android:textColor="@color/black"
            android:text=""/>

        <ImageView
            android:id="@+id/img_back_clear"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back_clear"
            android:visibility="gone"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


</RelativeLayout>